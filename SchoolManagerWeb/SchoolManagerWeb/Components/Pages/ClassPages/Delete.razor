@page "/classes/delete"
@rendermode InteractiveServer

<PageTitle>Delete</PageTitle>
<AuthorizeView Roles="Admin" Context="AuthorizeContext">
    <Authorized>
        <h1>Delete</h1>

        <p>Are you sure you want to delete this?</p>
        <div>
            <h2>Class</h2>
            <hr/>
            @if (currentClass is null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-2">Name</dt>
                    <dd class="col-sm-10">@currentClass.Name</dd>
                </dl>
                <EditForm method="post" Model="currentClass" OnValidSubmit="DeleteClass"
                          FormName="delete" Enhance>
                    <button type="submit" class="btn btn-danger" disabled="@(currentClass is null)">Delete</button>
                    |
                    <a href="/classes">Back to List</a>
                </EditForm>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectNotFound/>
    </NotAuthorized>
</AuthorizeView>


